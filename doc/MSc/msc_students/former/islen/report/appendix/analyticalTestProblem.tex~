\section{Constructing a test wave function}

\begin{equation}
 \Psi_T = e^{-\alpha(r_1 +  r_2)} J_{\beta}
\end{equation}

$$
J_{\beta} = e^{\sum_{j\neq k} }
$$


Two hidrogen-like wave functions used to matematically describe the states $1s$ and $2s$ for the electrones in the berylium atom are given by 

\begin{eqnarray}
\phi_{1s}(\bfv{r}) & = & e^{-\alpha r} \nonumber \\
\phi_{2s}(\bfv{r}) & = & \left(1 - \frac{\alpha}{2} r\right)e^{-\frac{\alpha}{2} r} \nonumber
\end{eqnarray}


where $\bfv{r} = (x, y, z)$ and 

$$r = \sqrt{x^2 +  y^2 + z^2}$$

The gradients for this two orbitals are given by

$$
 \Grad{\phi_{1s}} = \frac{\partial \phi_{1s}}{\partial r} \left(\frac{\partial r}{\partial x}\uvec{e}_1 + \frac{\partial r}{\partial y}\uvec{e}_2 + \frac{\partial r}{\partial z}\uvec{e}_3 \right)$$

or 

\begin{equation}
 \boxed{\Grad{\phi_{1s}} = -\alpha \left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right) e^{-\alpha r}}
\end{equation}

Later,

\begin{eqnarray}
 \Grad{\phi_{2s}} & = & \frac{\partial \phi_{2s}}{\partial r} \left(\frac{\partial r}{\partial x}\uvec{e}_1 + \frac{\partial r}{\partial y}\uvec{e}_2 + \frac{\partial r}{\partial z}\uvec{e}_3 \right)\nonumber\\
& = & \frac{\partial \phi_{2s}}{\partial r}  \left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right)\nonumber
\end{eqnarray}

Now, 
\begin{eqnarray}
\frac{\partial \phi_{2s}}{\partial r} & = & -\frac{\alpha}{2} e^{-\frac{\alpha}{2}r} - \frac{\alpha}{2}\left(e^{-\frac{\alpha}{2}r} -\frac{\alpha}{2} r e^{-\frac{\alpha}{2}r} \right)\nonumber\\
& = & -\frac{\alpha}{2}\left(2 - \frac{\alpha}{2} r\right) e^{-\frac{\alpha}{2}r}\nonumber
\end{eqnarray}

Hence, 

\begin{equation}
 \boxed{\Grad{\phi_{2s}} = -\frac{\alpha}{2}\left(2 - \frac{\alpha}{2} r\right)\left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right)e^{-\frac{\alpha}{2}r}}
\end{equation}


For the laplacians yields

\begin{eqnarray*}
\nabla^2 \phi_{1s} & = & \bfv{\nabla} \bullet \Grad{\phi_{1s}}\\
& = & \left(\frac{\partial }{\partial x}\uvec{e}_1 + \frac{\partial }{\partial y}\uvec{e}_2 + \frac{\partial }{\partial z}\uvec{e}_3 \right) \bullet \left[-\alpha \left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right) e^{-\alpha r}\right]\nonumber\\
& = & -\alpha \left[\frac{\partial }{\partial x}\left(\frac{x}{r} e^{-\alpha r}\right) + \frac{\partial }{\partial y} \left(\frac{y}{r} e^{-\alpha r}\right) + \frac{\partial }{\partial z}\left( \frac{x}{r} e^{-\alpha r}\right) \right]\nonumber\\
& = & -\alpha \frac{\left(e^{-\alpha r} - \alpha \frac{x^2}{r} e^{-\alpha r}\right) r - \frac{x^2}{r} e^{-\alpha r}}{r^2} -\alpha \frac{\left(e^{-\alpha r} - \alpha \frac{y^2}{r} e^{-\alpha r}\right) r - \frac{y^2}{r} e^{-\alpha r}}{r^2}\\
& & -\alpha \frac{\left(e^{-\alpha r} - \alpha \frac{z^2}{r} e^{-\alpha r}\right) r - \frac{z^2}{r} e^{-\alpha r}}{r^2} \\
& = & -\alpha\left[\left(\frac{1}{r} - \alpha \frac{x^2}{r^2} - \frac{x^2}{r^3} \right) + \left(\frac{1}{r} - \alpha \frac{y^2}{r^2} - \frac{y^2}{r^3} \right) + \left(\frac{1}{r} - \alpha \frac{z^2}{r^2} - \frac{z^2}{r^3} \right) \right] e^{-\alpha r}
\end{eqnarray*}

or 

\begin{equation}
\boxed{\nabla^2 \phi_{1s} =  \left(\alpha^2 - \frac{2 \alpha}{r}\right) e^{- \alpha r}}
\end{equation}

and 

\begin{eqnarray*}
\nabla^2 \phi_{2s} & = & \bfv{\nabla} \bullet \Grad{\phi_{2s}}\\
& = & \left(\frac{\partial }{\partial x}\uvec{e}_1 + \frac{\partial }{\partial y}\uvec{e}_2 + \frac{\partial }{\partial z}\uvec{e}_3 \right) \bullet \left[-\frac{\alpha}{2}\left(2 - \frac{\alpha}{2} r\right)\left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right)e^{-\frac{\alpha}{2}r} \right]\nonumber\\
& = & \left(\frac{\partial }{\partial x}\uvec{e}_1 + \frac{\partial }{\partial y}\uvec{e}_2 + \frac{\partial }{\partial z}\uvec{e}_3 \right) \bullet \left\{\left[-\alpha + \left(\frac{\alpha}{2}\right)^2 r \right] \left(\frac{x}{r}\uvec{e}_1 + \frac{y}{r}\uvec{e}_2 + \frac{z}{r}\uvec{e}_3 \right)e^{-\frac{\alpha}{2}r} \right\}\nonumber\\
& = & \frac{\partial }{\partial x}\left\{\left[-\alpha + \left(\frac{\alpha}{2}\right)^2 r \right] e^{-\frac{\alpha}{2}r}\right\}  + \frac{\partial }{\partial y}\left\{\left[-\alpha + \left(\frac{\alpha}{2}\right)^2 r \right] e^{-\frac{\alpha}{2}r}\right\}\\
& + & \frac{\partial }{\partial z} \left\{\left[-\alpha + \left(\frac{\alpha}{2}\right)^2 r \right] e^{-\frac{\alpha}{2}r}\right\}
\end{eqnarray*}

\begin{eqnarray*}
\nabla^2 \phi_{2s} & = & -\alpha \left[\frac{\partial }{\partial x} e^{-\frac{\alpha}{2}r} + \frac{\partial }{\partial y} e^{-\frac{\alpha}{2}r} + \frac{\partial }{\partial z} e^{-\frac{\alpha}{2}r}\right]\\
& + & \left(\frac{\alpha}{2}\right)^2 \left[\frac{\partial }{\partial x} r e^{-\frac{\alpha}{2}r} +  \frac{\partial }{\partial y}  r e^{-\frac{\alpha}{2}r} + \frac{\partial }{\partial z} r e^{-\frac{\alpha}{2} r}\right]\nonumber\\
& = & \left(\frac{\alpha^2}{2}\right) \left(\frac{x + y + z}{r}\right) e^{-\frac{\alpha}{2}r}\\
& + & \left(\frac{\alpha}{2}\right)^2 \left[\frac{x}{r}\left(1 - \frac{\alpha}{2} r\right) + \frac{y}{r}\left(1 - \frac{\alpha}{2} r\right) + \frac{z}{r}\left(1 - \frac{\alpha}{2} r\right)\right]e^{-\frac{\alpha}{2}}\nonumber\\
& = & \left(\frac{\alpha^2}{2}\right) \left(\frac{x + y + z}{r}\right) e^{-\frac{\alpha}{2}r}  +  \left(\frac{\alpha}{2}\right)^2 \left(\frac{x + y + z}{r}\right)\left(1 - \frac{\alpha}{2} r\right)e^{-\frac{\alpha}{2} r}\nonumber\\
& = & \left(\frac{x + y + z}{r}\right) \left[ \frac{\alpha^2}{2}  +  \frac{\alpha^2}{4}\left(1 - \frac{\alpha}{2} r\right)\right]e^{-\frac{\alpha}{2} r }\nonumber\\
\end{eqnarray*}

\begin{equation}
 \boxed{\nabla^2 \phi_{2s} =  \frac{\alpha^2}{8} \left(\frac{x + y + z}{r}\right) \left(6 - \alpha r\right)e^{-\frac{\alpha}{2} r}}
\end{equation}


