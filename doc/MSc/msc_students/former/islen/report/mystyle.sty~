%%% MY ENVIROMENTS

% Environment for cite source code in a fancy fashion
% REQUIRES: \usepackage{verbatim} in your master document
\newcounter{SRCcounter}
\setcounter{SRCcounter}{0}
\newenvironment{src}%
{\footnotesize     % bruk en liten font i listing av LaTeX-fila
 \renewcommand{\baselinestretch}{0.85} % mindre linjeavstand (85%)
% \endgraf\noindent%
\endgraf\verbatim}%
{\endverbatim}



% new itemize environment with itemsep parameter
\newenvironment{myitemize}[1][0]
  { \begin{itemize}
    % set spacing between items
    \addtolength{\itemsep}{#1\baselineskip}
    % set spacing between lines
    \addtolength{\baselineskip}{#1\baselineskip} }
  { \end{itemize} }


